{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.AspNetCore.Authentication": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}] <{SourceContext:l}> {TraceId}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      }
    ]
  },

  "Api": {
    "Localization": {
      "Culture": "ru"
    },
    "Authorization": {
      "TrustedNetwork": {
        "CallbackPolicy": {
          "Networks": [
            "127.0.0.0/8",
            "::1/128"
          ]
        }
      }
    },
    "Swagger": {
      "Enabled": true
    }
  },

  "Alerting": {
    "Templates": {
      "Store": {
        "FileSystem": {
          "Path": "_templates"
        }
      }
    },
    "Channels": {
      "Store": {
        "Predefined": [
          {
            "Name": "default"
          }
        ]
      }
    },
    "Subscriptions": {
      "Store": {
        "Consul": {
          "Address": "http://127.0.0.1:8500"
        } 
      }
    }
  },

  "Clients": {
    "Callback": {
      "BaseUrl": "http://localhost:5000",
      "Timeout": "00:00:45"
    }
  }
}